<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE agilelog SYSTEM "agilelog.dtd">

<agilelog version="1.0">
    <!-- Global configuration applied to whole project -->
	<global_config>
		<!-- output: file, logcat, stdout, socket -->
		<output type = "file">
            <path name = "./mmp"/>
        </output>

        <!-- debug level: fatal, error, warning, info, debug, verbose-->
        <!-- it could be overrided by module debugging level -->
        <debug level = "verbose"/>

        <!-- add the timestamp for each log item or NOT. value: true OR false-->
        <timestamp on = "true"/>

        <!-- write log out: on or off -->
        <log on = "true"/>
        
        <!-- the size of log file: XX MB -->
        <log_size>50</log_size>
	</global_config>

    <module_config>
    	<module name = "Magfw_RBTree">
