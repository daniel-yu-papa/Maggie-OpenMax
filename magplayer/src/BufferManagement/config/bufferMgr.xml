<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE bufferMgr SYSTEM "bufferMgr.dtd">

<bufferMgr version="1.0">
        <!-- the front end buffer: content pipe -->
	<content_pipe>
                <!-- buffer size in playing seconds -->
                <buffer_size>30</buffer_size>

                <!-- default stream bps if failed to detect the stream bps -->
                <kbps>10000</kbps>
                
                <!-- low buffer level in ms -->
                <low_level>2000</low_level>

                <!-- play buffer level in ms -->
                <play_level>5000</play_level>

                <!-- high buffer level in ms-->
                <high_level>25000</high_level>
	</content_pipe>

        <demuxer_stream>
                <!-- video buffer size in playing seconds -->
                <video_buffer_size>30</video_buffer_size>

                <!-- audio buffer size in kbytes -->
                <audio_buffer_size>2048</audio_buffer_size>

                <!-- othre buffer size in kbytes -->
                <other_buffer_size>2048</other_buffer_size>

                <!-- low buffer level in ms -->
                <low_level>2000</low_level>

                <!-- play buffer level in ms -->
                <play_level>5000</play_level>

                <!-- high buffer level in ms-->
                <high_level>20000</high_level>

                <!-- default stream bps if failed to detect the stream bps -->
                <kbps>10000</kbps>
        </demuxer_stream>
</bufferMgr>
